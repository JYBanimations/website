---
import cw from '../assets/icons/cw.svg';

interface Props {
  image: string;
  contestName: string;
  filmName: string;
  date?: string;
  showWreath?: boolean;
}

const { image, contestName, filmName, date = '', showWreath = false } = Astro.props;
---

<div class="contest-card">
  <div class="image-container">
    <img src={image} alt={filmName} />

    {showWreath && (
      <div class="wreath">
        <img src={cw.src} alt="Caesar Wreath" />
      </div>
    )}
  </div>

  <div class="text">
    <h3>{contestName}</h3>
    {date && <span class="contest-date">{date}</span>}
    <p set:html={filmName}></p>
  </div>
</div>

<style>
.contest-card {
  width: 300px;
  background: #404040;
  border-radius: 20px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.image-container {
  width: 100%;
  height: 50%;
  overflow: hidden;
  position: relative;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.wreath {
  position: absolute;
  top: 8px;
  left: 8px;
  pointer-events: none;
  width: 40px;
  height: 40px;
  z-index: 10;
}

.wreath img {
  width: 100%;
  height: 100%;
}

.text {
  padding: 16px;
  color: white;
  line-height: 1.3;
}

.text h3 {
  margin: 0 0 4px 0;
  font-size: 1.2rem;
}

.contest-date {
  display: block;
  font-size: 0.9rem;
  color: #d0d0d0;
  margin-bottom: 8px;
}

.text p {
  margin: 0;
  font-size: 1rem;
  opacity: 0.85;
  white-space: pre-line;
}
</style>